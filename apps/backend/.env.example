# Server
PORT=5000
NODE_ENV=development

# Database - Use Supabase, Neon, or Railway PostgreSQL for production
DATABASE_URL=postgresql://postgres:password@localhost:5432/menu_digital

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Xendit
XENDIT_SECRET_KEY=xnd_development_xxxx
XENDIT_WEBHOOK_TOKEN=your-webhook-verification-token

# Frontend URL (for CORS and payment redirects)
FRONTEND_URL=http://localhost:5173

# Upload - Local development only
UPLOAD_DIR=uploads

# Cloudinary (for production image uploads)
# Get these from: https://cloudinary.com/console
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

